{
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "plugins": ["ava", "lodash"],
  "extends": ["airbnb-base", "plugin:ava/recommended", "plugin:lodash/recommended"],
  "rules": {
    "lodash/prefer-lodash-method": 0,
    "arrow-parens": 0,
    "comma-dangle": 0,
    "import/prefer-default-export": 0,
    "no-param-reassign": [2, { "props": false }],
    "id-length": [2, {"min": 2, "properties": "never", "exceptions": ["_", "t"]}] // Allow lodash and ava
  }
}
